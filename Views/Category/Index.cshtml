@model IEnumerable<Category>

@{
    ViewData["title"] = "Index";
}

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end mt-2">
            <a asp-controller="category" asp-action="Create" class="btn btn-primary ">Create</a>
        </div>
    </div>


<table class="table table-bordered table-striped" style="width: 100%;">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Category Display Order
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td width="50%">
                    @item.Name
                </td>
                <td width="30%" >
                    @item.DisplayOrder
                </td>
                <td>
                    <div class="w-70 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2">Edit</a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

</div>